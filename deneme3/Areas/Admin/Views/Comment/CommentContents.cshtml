@using EntityLayer.Concrete
@model Comment
@{
    ViewData["Title"] = "CommentContents";
    Layout = "~/Views/Shared/AdmınLayout.cshtml";
}

<h1>Yorum İçeriği Sayfası</h1>
<div class="col-lg-12">
    <label>#</label>
    <label class="form-control">@Model.CommentId</label>
    <br />
    <label>Kullanici Adi</label>
    <label class="form-control">@Model.CommentUserName</label>
    <br />
    <label>Yorum Başlığı</label>
    <label class="form-control">@Model.CommentTitle</label>
    <br />
    <label>Yorum İçeriği</label>
    <textarea rows="12" cols="3" class="form-control" readonly="readonly">@Model.CommentContent</textarea>
    <br />
    <a href="/Admin/Comment/Index" class="btn btn-primary">Geri Dön</a>
    <form action="/Admin/Comment/DeleteComment/@Model.CommentId" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger" data-placement="top"><i class="fa fa-times"></i> Sil</button>
    </form>
</div>

