@using EntityLayer.Concrete
@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/AdmınLayout.cshtml";
}



<form method="post">
    <h1>Kategoriyi Güncelleme Alanı</h1>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Kategori İsmi:</label>
        <div class="col-sm-10"><input type="text" class="form-control" name="CategoryName" placeholder="örnek : Bilim" value="@ViewBag.Categoryname"></div>
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Kategori İçeriği:</label>
        <div class="col-sm-10"><input type="text" class="form-control" name="CategoryDescription" placeholder="örnek : bir kategorini bu alanları içermektedir." value="@ViewBag.CategoryDescription"></div>
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
    </div>

    <button class="btn btn-sm btn-primary">Güncelle</button>
    <a href="/Admin/Category/Index/" class="btn btn-success">İptal</a>





</form>
