@using EntityLayer.Concrete
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdmınLayout.cshtml";
}



<!DOCTYPE html>
<html>


<body>


    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Roller </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Role Adı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/Rol/RolEdit/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                                        <td><a href="/Admin/Rol/RolDelete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Rol/RolAdd/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>

