@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssingnRole";
    Layout = "~/Views/Shared/AdmınLayout.cshtml";
}
<label>Yetkilendirme Sayfası</label>
<br />
<label>@ViewBag.UserName</label>
<form method="post">
    @for(int i=0;i<Model.Count;i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn btn-info">Değişiklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/Rol/UserRolList" class="btn btn-primary">Kullanıcı Listesine Dön</a>

