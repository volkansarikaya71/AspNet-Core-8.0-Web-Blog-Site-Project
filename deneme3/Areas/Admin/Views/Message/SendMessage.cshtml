@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/AdmınLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>


    <div class="wrapper wrapper-content">
        <div class="row">
            @await Html.PartialAsync("/Areas/Admin/Views/Message/MessageContentArea.cshtml")
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">
                    @if (ViewBag.SayfaAdi == "DrafSend")
                    {
                        <h2>
                            Gönderilecek Olan Taslak Mesaj
                            <form action="/Admin/Message/DraftDelete/@ViewBag.id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-times"></i> Sil
                                </button>
                            </form>
                        </h2>
                    }
                    else
                    {
                        <h2>
                            Gönderilecek Olan Mesaj
                        </h2>
                    }


                </div>
                <div class="mail-box">
                    <div class="mail-body">

                        <form method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Gönderilecek Olan Mail Adresi:</label>

                                <div class="col-sm-10"><input type="text" class="form-control" name="ReceiverEmail" placeholder="örnek : mailadresi@gmail.com"></div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu Başlığı:</label>

                                <div class="col-sm-10"><input type="text" class="form-control" name="Subject" placeholder="örnek : Test" value="@ViewBag.DraftSubject"></div>
                                @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mesajınız</label>
                                <textarea class="form-control" name="MessageDetails" placeholder="örnek : Merhaba bu bir mesajtır." rows="4" cols="10">@ViewBag.DraftMessageDetails</textarea>
                                @Html.ValidationMessageFor(x => x.MessageDetails, "", new { @class = "text-danger" })
                            </div>


                            <div class="mail-body text-right tooltip-demo">
                                <button class="btn btn-sm btn-primary">Gönder</button>

                                <a href="#" class="btn btn-white btn-sm" data-placement="top"><i class="fa fa-times"></i> İptal et</a>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly">
                            </div>
                        </form>




                    </div>


                    <div class="clearfix"></div>



                </div>
            </div>
        </div>
    </div>

</body>

</html>
