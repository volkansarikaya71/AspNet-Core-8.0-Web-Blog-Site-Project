@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    @if (Model.Count() == 0)
    {
        <h4>Hiç Yorum eklenmemiştir ilk yorumu ekleyen siz olmak ister misiniz?</h4>
    }
    else
    {
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="/deneme3Tema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
</div>
