
@if (ViewBag.Username!=null)
{
	<div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">

		<span>Hoşgeldin</span>
		<span style="color: mediumvioletred;">@ViewBag.namesurname</span>
		<br />
		<a href="/Login/LogOut" class="fas fa-lock">Çıkış Yap</a>
		@* <a href="/Login/LogOut" class="mdi mdi-logout menu-icon">Çıkış Yap</a> *@
	</div>
}
else
{
	<div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">

		<span>Giriş Menüsü</span>
		<span class="mx-lg-4 mx-md-2  mx-1">
			<a href="/Login/Index">
				<i class="fas fa-lock"></i> Giriş Yap
			</a>
		</span>
		<span>
			<a href="/RegisterUser/Index">
				<i class="far fa-user"></i> Kayıt ol
			</a>
		</span>
	</div>
}

