@using EntityLayer.Concrete
@model List<Message2>

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email-outline"></i>
        @if (ViewBag.messagenotreadcount != 0)
        {
            <span class="count-symbol bg-warning"></span>
        }
        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list"  aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model)
    {
        @if (!item.Reading)
        {
            
            <a class="dropdown-item preview-item" href="/Message2/InBox/">
                <div class="preview-thumbnail">
                    <img src="@item.Sender.ImageUrl" alt="image" class="profile-pic">
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Sender.NameSurname Sana Mesaj Gonderdi</h6>
                    <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString() </p>

                </div>
            </a>
        }
    }
    @if (ViewBag.messagenotreadcount == 0)
    {

            <div class="dropdown-messages-box">
                <span class="label label-warning">Hiç mesajınız Bulunmamaktadır. :/ </span>
            </div>
       
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">@ViewBag.messagenotreadcount Yeni mesaj</h6>
</div>
    </a>
</li>


