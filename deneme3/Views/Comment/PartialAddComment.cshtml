@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="comment-top">
	<h4>Bir Yorum yapın </h4>
	<div class="comment-bottom">
		<form method="post">
			<input class="form-control" type="text" id="name" name="CommentUserName" placeholder="Adınız" required="">
			<input class="form-control" type="text" id="Title" name="CommentTitle" placeholder="Konu Başlığı" required="">
			<input class="form-control" type="text" id="Content" name="CommentContent" placeholder="Yorumunuz" required="">
			<button type="submit" id="btn2" class="btn btn-primary submit">Yorum Yap.</button>

		</form>

	</div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script type="text/javascript">

	$("#btn2").click(function () {
		let values = {
			CommentUserName: $("#name").val(),
			CommentTitle: $("#Title").val(),
			CommentContent: $("#Content").val()
		};

		$.ajax({
			type: "post",
			url: "/Comment/PartialAddComment",
			data: values,
			success: function (func) {
				let result = jQuery.parseJSON(func);
			}
		});
	});

</script>